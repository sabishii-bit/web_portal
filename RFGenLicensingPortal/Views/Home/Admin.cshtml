@{
  ViewData["Title"] = "Admin";
}


<div class="container mt-5 pt-5 col-12 col-xl-10">
  <div class="row">
    <div class="col-6 page-header">Admin</div>
  </div>
  <div class="card">
    <div class="container col-12 pb-3">
      <div class="form pt-4">
        <div class="form-row col-md-12">
          <div class="form-group col-md-1"></div>
          <div class="form-group col-md-5">
            <label for="roleselect"> <b>USER GROUP:</b> </label>
            <select multiple class="form-control" id="roleselect">
              <option>Admin</option>
              <option>IT</option>
              <option>Dev Team</option>
              <option>Sales</option>
            </select>
          </div>
          <div class="form-group col-md-1"></div>
          <div class="form-group col-md-5">
            <label for="defaultCheck1"> <b>PERMISSIONS:</b> </label>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
              <label class="form-check-label" for="defaultCheck1">Edit Records</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
              <label class="form-check-label" for="defaultCheck1">Delete Records</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
              <label class="form-check-label" for="defaultCheck1">Request Authorization</label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
              <label class="form-check-label" for="defaultCheck1">Admin</label>
            </div>
          </div>

          <div class="form-row col-md-12">
            <div class="col-md-1"></div>
            <div class="col-md-11 font float-left pt-5"><h5><b>SalesForce Database Sync:</b></h5></div>
            <div class="col-md-1"></div>
            <div class="col-md-2">
              <input class="form-control-check-input" type="checkbox" value="">
              <label class="form-check-label"> Schedule Sync Time</label>
            </div>
            <div class="form-group col-md-1{ justify-content: flex-end }">
              <label for="dropdownMenuButton">Sync Period</label>
            </div>
            <div class="dropdown">
              <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" margin-bottom="20">
                Period...
              </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="#">Daily</a>
                <a class="dropdown-item" href="#">Weekly</a>
                <a class="dropdown-item" href="#">Semi-Weekly</a>
                <a class="dropdown-item" href="#">Semi-Weekly</a>
              </div>
            </div>

            <div class="col-md-4"></div>
            <div class="col-md-3"></div>
            <div class="col-md-1"></div>
            <div class="form-group col-md-2">
              <button type="submit" class="btn btn-block btn-outline-primary">Start Sync Task</button>
            </div>
            <div class="form-group col-md-2">
              <button type="submit" class="btn btn-block btn-outline-primary" data-toggle="modal" data-target="#SFLog">View Sync Results</button>
            </div>

            <div class="col-md-2"></div>

          </div>

          <div class="col-md-10 font text-center pt-5"><h5><b>Default Table Layout:</b></h5></div>
          <div class="col-md-2"></div>
          <div class="col-md-1"></div>
          <div class="list-group col-md-3">
            <label for="columnSet"> <b>Current Columns:</b> </label>
            <ul id="sortable1" class="connectedSortable p-1 border">
              <li class="list-group-item">RF User</li>
              <li class="list-group-item">Company Name</li>
              <li class="list-group-item">VAR</li>
              <li class="list-group-item">Server Notes</li>
              <li class="list-group-item">Support Expiration</li>
              <li class="list-group-item">Users Authorized</li>
              <li class="list-group-item">Link To Details Page</li>
              <li class="list-group-item">Quick Authorization</li>
            </ul>
          </div>
          <div class="col-md-3"></div>
          <div class="list-group col-md-3">
            <label for="columnOption"> <b>Unused Columns:</b> </label>
            <ul id="sortable2" class="connectedSortable p-1 border">
              <li class="list-group-item">SalesForce ID</li>
              <li class="list-group-item">Allocation Group</li>
              <li class="list-group-item">Serial Number</li>
              <li class="list-group-item">Thin Clients</li>
              <li class="list-group-item">Application Count</li>
              <li class="list-group-item">Batch Clients</li>
              <li class="list-group-item">Barcode Scanner</li>
              <li class="list-group-item">Vocollect Clients</li>
              <li class="list-group-item">Sales Person</li>
              <li class="list-group-item">Expiration Date</li>
              <li class="list-group-item">Server Renewal Cost</li>
              <li class="list-group-item">Server Count</li>
              <li class="list-group-item">System ID</li>
              <li class="list-group-item">Entry Date</li>
              <li class="list-group-item">Installation Count</li>
              <li class="list-group-item">Release Number</li>
              <li class="list-group-item">Trial Days</li>
            </ul>
          </div>
          <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
          <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
          <script>
            $(function () {
              $("#sortable1, #sortable2").sortable({
                connectWith: ".connectedSortable"
              }).disableSelection();
            });
          </script>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- The SF Log Modal -->
<div class="modal" id="SFLog">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Edit Log</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <table class="table table-bordered table-striped table-sm text-center">
          <thead class="thead-light">
            <tr>
              <th>RFUser</th>
              <th>Column</th>
              <th>Local Data</th>
              <th>SalesForce Data</th>
            </tr>
          </thead>
          <tbody class="text-center">
            <tr>
              <td>003</td>
              <td>Support Expiration</td>
              <td>11/27/2021</td>
              <td>11/27/2020</td>
            </tr>
            <tr>
              <td>005.3</td>
              <td>Users Authorized</td>
              <td>15</td>
              <td>25</td>
            </tr>
            <tr>
              <td>022</td>
              <td>Company Name</td>
              <td>Industries Inc</td>
              <td>null</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
