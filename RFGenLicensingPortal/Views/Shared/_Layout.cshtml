<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - RFGenLicensingPortal</title>
  <link rel="shortcut icon" href="~/rfgen.ico" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="~/css/site.css" />
  <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://cdn.datatables.net/1.10.2/css/jquery.dataTables.min.css">
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark fixed-top">
      <a class="navbar-brand" href="#"></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="/home/home">
              <i class="fa fa-home fa-2x p5" aria-hidden="true"></i>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/home/logs">
              <i class="fa fa-history fa-2x" aria-hidden="true"></i>
            </a>
          </li>
          @await Component.InvokeAsync("Header")
        </ul>
      </div>
      <div class="row">
        <ul class="navbar-nav">
          <div class="navbar-search col-8">
            <input id="navbar-search-field" type="text" class="form-control" placeholder="Search">
          </div>
          <div class="navbar-search col-3 text-center">
            <a id="search-link" class="nav-link" href="/home/home?q=">
              <button id="search-button" type="button" class="btn btn-outline-light">Search</button>
            </a>
          </div>
          <div class="navbar-search col-1">
            <a class="nav-link" href="#">
              <i class="fa fa-search-plus fa-2x" aria-hidden="true"></i>
            </a>
          </div>
        </ul>
      </div>
      <div class="collapse navbar-collapse"></div>
      <div>
        <ul class="nav navbar-nav pull-right">
          <li class="nav-item">
            <a class="nav-link" href="/home/admin">
              <i class="fa fa-cogs fa-2x ml-auto mr-3" aria-hidden="true"></i>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/home/profile">
              <i class="fa fa-user-circle fa-2x mb-2 ml-auto" aria-hidden="true"></i>
            </a>
          </li>
        </ul>
      </div>
    </nav>
  </header>
  <div class="container-fluid">
    <main role="main" class="pb-3">
      @RenderBody()
    </main>
  </div>

  <footer class="border-top footer text-muted">
    <div class="container">
      &copy; 2021 - RFGenLicensingPortal - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
  </footer>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script type="text/javascript" src="https://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>

  @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

